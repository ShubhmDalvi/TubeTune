{
  "manifest_version": 3,
  "name": "TubeTune",
  "version": "1.0.0",
  "description": "Automatically plays YouTube videos in your preferred quality (e.g. 1080p, 720p). Works on YouTube & YouTube Music",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://music.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtu.be/*",
        "https://music.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-script.js"],
      "matches": [
        "https://www.youtube.com/*",
        "https://youtu.be/*",
        "https://music.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
